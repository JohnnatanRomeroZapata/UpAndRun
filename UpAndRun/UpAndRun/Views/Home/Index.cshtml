@model UpAndRun.Models.ViewModels.HomeVM;


@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="text-center">
        <button class="btn btn-dark filter-button" data-filter="all">All</button>

        @foreach (var c in Model.ListOfCategories)
        {
            <button class="btn btn-outline-secondary filter-button" data-filter="@c.CategoryName.Replace(' ' , '_')">@c.CategoryName</button>
        }
    </div>

    <br />

    <div class="row">
        @foreach (var p in Model.ListOfProducts)
        {
            <partial name="PartialViews/_IndividualProductCard" model="p"/>
        }
    </div>
</div>

@section Scripts{

    <script>
        $(document).ready(function(){

            $(".filter-button").click(function(){

                var dataFilterValue = $(this).attr('data-filter');

                if (dataFilterValue == "all")
                {
                    $('.filter').show('1000');
                }
                else
                {
                    $(".filter").not('.' + dataFilterValue).hide('3000');
                    $('.filter').filter('.' + dataFilterValue).show('3000');
                }
            });

        });
    </script>
}
