@model IEnumerable<UpAndRun.Models.Category>

@{
    ViewData["Title"] = "IndexCategory";
}

<div class="container">

    <div class="row">
        <div class="col-6">
            <h2>Category List</h2>
        </div>
        <div class="col-6 d-flex align-items-center justify-content-center">
            <a class=" btn btn-info" asp-controller="Category" asp-action="CreateCategory"> <i class="fas fa-plus"></i> Create Category</a>
        </div>
    </div>

    <hr />

    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th scope="col" class="text-center">Id</th>
                    <th scope="col" class="text-center">Category</th>
                    <th scope="col" class="text-center">Order</th>
                    <th scope="col" class="text-center">Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <th class="text-center w-25">@category.Id</th>
                        <td class="text-center w-25">@category.CategoryName</td>
                        <td class="text-center">@category.DisplayOrder</td>
                        <td class="text-center w-25">
                            <a class="btn btn-warning" asp-controller="Category" asp-action="UpdateCategory" asp-route-Id="@category.Id"> <i class="fas fa-pen"></i> Update</a>
                            <a class="btn btn-danger" asp-controller="Category" asp-action="DeleteCategory" asp-route-Id="@category.Id"> <i class="fas fa-trash-alt"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h2>There are no categories</h2>
    }
</div>

